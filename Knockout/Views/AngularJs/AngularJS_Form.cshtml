@{
    ViewBag.Title = "AngularJS_Form";
    Layout = null;
}
<!DOCTYPE html>
<html>
<!--边界-->
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <title>todolist</title>
    <meta charset="utf-8" />
    @Styles.Render("~/Content/bootstrap.min.css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/angular-ui-router.js")
    @Scripts.Render("~/Scripts/underscore.js")
</head>
<body>
<div class="container-fluid">
    <div class="row" ng-controller="FromDemo01Controller">
        <form>

            <div class="form-group">
                用户名：<input type="text" ng-model="user.name"/>
            </div>
            <div class="form-group">
                邮箱：<input type="text" ng-model="user.email"/>
            </div>
            <div class="form-group">
                年龄：<input type="number" ng-model="user.age" min="1" max="99"/>
            </div>
            <div class="form-group">
                性别：<input type="radio" ng-model="user.gender" value="0"/>女
                <input type="radio" ng-model="user.gender" value="1"/>男
            </div>
            <div class="form-group">
                <button class="btn btn-default" ng-click="save(user)">提交</button>
            </div>
        </form>
    </div>
</div>


<script type="text/javascript">
    (function() {
        'use strict';

        angular
            .module('app', [])
            .controller('FromDemo01Controller', function($scope) {

                $scope.save=function(user) {
                    console.log(angular.copy(user));
                }
            });
        //angular.bootstrap(element, [modules], [config]);
        /*第一个参数element:是绑定ng-app的dom元素；
        modules：绑定的模块名字
        config：附加的配置*/
        angular.bootstrap(document, ['app']);
    })();
</script>
</body>
</html>


